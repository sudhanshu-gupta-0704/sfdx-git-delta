{
  "extends": "./node_modules/@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "importHelpers": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "include": [
    "./src/**/*",
    "./src/**/*.json"
  ]
}
